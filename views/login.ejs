<!doctype html>
<html>
<head>
   <meta charset="UTF-8">
   <meta name="viewport" content="width=device-width, initial-scale=1.0">
   <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
   <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
   <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="w-full h-screen  overflow-hidden">
   <main class="w-full h-screen bg-zinc-50 overflow-hidden">
      <div class="w-full h-[30%] bg-black flex items-center justify-center">
         <i class="bi bi-person-fill text-white text-[16vh]"></i>
      </div>
      <div>
         <h1 class="font-black ml-[5vw] my-[2vh] text-[7vw]">LogIn</h1>
         <!-- action="/login" method="post"  -->
         <form action="/login" method="post" class="font-black">
            <div class="flex px-[5vw] py-[2vh] items-center justify-between">
               <label>UserName : </label>
               <input id="username" class="py-[0.5vh] w-[60%] px-[3vw] rounded-md border-[1px] border-zinc-800 outline-none" type="text" name="username" placeholder="user name" required>
            </div>
            <div class="flex px-[5vw] py-[2vh] items-center justify-between">
               <label>Password : </label>
               <input id="password" class="py-[0.5vh] w-[60%] px-[3vw] rounded-md border-[1px] border-zinc-800 outline-none" type="password" name="password" placeholder="password" required>
            </div>

            <button onclick="fetchProfile()" class="relative left-1/2 -translate-x-1/2 py-[1vh] mt-[4vh] px-[25vw] rounded-md bg-zinc-950 text-white tracking-normal text-[4.5vw]">Log In</button>
         </form>

         <h2 class="font-semibold inline-block mt-[4vh] relative left-1/2 -translate-x-1/2">Don't have any account? <a class="font-black" href="/register">SingUp</a></h2>
      </div>
   </main>
   
   <div style="display: none;" id="loader" class="fixed bg-zinc-400 top-0 z-50 gap-[3vw] w-full h-full flex items-center justify-center">
      <h1 class="font-black text-[2rem] tracking-tighter">processing details</h1>
      <div class="relative w-[5vh] h-[5vh] flex items-center">
         <div class="absolute w-[3.5vh] h-[3.5vh] rounded-full border border-black opacity-[0.15]"></div>
         <div class="absolute animate-spin w-[3.5vh] h-[3.5vh] rounded-full border-b-2  border-black"></div>
      </div>
   </div>
   
   
   <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
   
   <script>
      function fetchProfile() {
         let usr = document.querySelector("form #username").value
         let pass = document.querySelector("form #password").value
         if(usr != "" && pass != ""){
            document.getElementById("loader").style.display = "flex"
         }
         setTimeout(()=>{
            document.getElementById("loader").style.display = "none"
            // window.location.reload();
         },5000)
      }
   </script>
</body>
</html>